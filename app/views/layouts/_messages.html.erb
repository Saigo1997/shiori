<% flash.each do |message_type, message| %>
  <script>
    <% case message_type %>
    <% when 'alert' then %>
      toastr.error('<%= message %>')
    <% when 'success' then %>
      toastr.success('<%= message %>')
    <% else %>
      toastr.info('<%= message %>')
    <% end %>
  </script>
<% end %>
